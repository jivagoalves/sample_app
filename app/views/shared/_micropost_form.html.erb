<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.text_area :content, :class => "countdown" %>
    <br/>
    <span class="content-counter"></span>
  </div>
  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
