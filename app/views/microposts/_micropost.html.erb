<tr id=<%= "micropost-#{micropost.id}"%> >
  <td class="micropost">
    <span class="content"><%= wrap(micropost.content) %></span>
    <span class="timestamp">
      Posted <%= time_ago_in_words(micropost.created_at) %> ago.
    </span>
  </td>
  <% if current_user?(micropost.user) %>
    <td class="button">
      <%= button_to "delete", micropost, :method => :delete, :onclick => "return confirm('You sure?')", :title => micropost.content %>
    </td>
  <% end %>
</tr>
